<?xml version="1.0" encoding="utf-8"?>
<com.github.wnebyte.workoutapp.widget.InterceptTouchCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/cardview_layout_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:checkable="true"
    android:focusable="true"
    android:clickable="false"
    android:longClickable="false"
    android:soundEffectsEnabled="true"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:rippleColor="?android:attr/colorPrimary"
    card_view:cardCornerRadius="@dimen/cardview_corner_radius"
    card_view:cardElevation="@dimen/cardview_elevation"
    card_view:cardUseCompatPadding="true"
    >

    <include
        android:id="@+id/body"
        layout="@layout/exercise"
        />

    <include
        android:id="@+id/back"
        layout="@layout/check_mark"
        android:visibility="gone"
        />

</com.github.wnebyte.workoutapp.widget.InterceptTouchCardView>