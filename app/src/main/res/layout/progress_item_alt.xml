<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Bench Press"
        style="?attr/textAppearanceBody1"
        tools:ignore="HardcodedText"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/avg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="55"
        app:layout_constraintStart_toStartOf="@+id/name_tv"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"
        style="?attr/textAppearanceBody2"
        tools:ignore="HardcodedText"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/unit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:text="kg"
        app:layout_constraintStart_toEndOf="@+id/avg_tv"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"
        style="?attr/textAppearanceBody2"
        tools:ignore="HardcodedText"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/percentage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"
        android:text="+12%"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextAppearance.AppCompat.Body2"
        tools:ignore="HardcodedText"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/avg_tv"
        app:layout_constraintTop_toBottomOf="@id/avg_tv"
        >

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_edit_24"
            tools:ignore="ContentDescription"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>